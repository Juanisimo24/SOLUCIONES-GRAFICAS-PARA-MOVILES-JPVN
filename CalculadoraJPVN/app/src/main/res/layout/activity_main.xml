<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- PANTALLA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#1C1C1E"
        android:gravity="bottom|end"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tvOperacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="#8E8E93"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:maxLines="1"
            android:ellipsize="start" />
    </LinearLayout>

    <!-- BOTONES -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#1C1C1E"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="8dp"
        android:paddingTop="4dp"
        android:stretchColumns="*"
        android:shrinkColumns="*">

        <!-- FILA 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:id="@+id/btnC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#A5A5A5"
                android:text="C"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btnPlusMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#A5A5A5"
                android:text="+/-"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btnPorcentaje"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#A5A5A5"
                android:text="%"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9F0A"
                android:stateListAnimator="@null"
                android:text="รท"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </TableRow>

        <!-- FILA 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#FF9F0A"
                android:text="x"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
        </TableRow>

        <!-- FILA 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btnMenos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#FF9F0A"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:stateListAnimator="@null" />
        </TableRow>

        <!-- FILA 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btnIgual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#FF9F0A"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:stateListAnimator="@null" />
        </TableRow>

        <!-- FILA 5 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:gravity="center_vertical|start"
                android:paddingStart="24dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btnPunto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#333333"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:stateListAnimator="@null" />
            <Button android:id="@+id/btnBorrar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:backgroundTint="#A5A5A5"
                android:text="DEL"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:stateListAnimator="@null" />
        </TableRow>

        <!-- btnMas oculto para referencia en codigo -->
        <TableRow android:layout_weight="0" android:visibility="gone">
            <Button android:id="@+id/btnMas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="+" />
        </TableRow>

    </TableLayout>
</LinearLayout>