<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--
            TextView que mostrará los datos recibidos desde MainActivity.
            El id "parametros" se usará en Kotlin para escribir el texto.
        -->
        <TextView
            android:id="@+id/parametros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parametros:"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!--
            Botón para regresar al login.
            El id "regresa" se usará en Kotlin.
        -->
        <Button
            android:id="@+id/regresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4E60FE"
            android:text="Regresar a login" />

        <!--
            Botón para cerrar sesión.
            auth.signOut() cerrará la sesión de Firebase.
-->
        <Button
            android:id="@+id/cerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:backgroundTint="#D32F2F" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>